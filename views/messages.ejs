<!-- Error box -->
<% if (messages.error) { %>
<div class="bg-red-600 text-white m-1 px-4 py-2 rounded mt-5">
  <%= messages.error %>
</div>
<% } %>
<!-- Error box end -->

<!-- Success box -->
<% if (messages.success) { %>
<div class="bg-green-600 text-white m-1 px-4 py-2 rounded mt-5">
  <%= messages.success %>
</div>
<% } %>
<!-- Success box end -->

<!-- Info box -->
<% if (messages.info) { %>
<div class="bg-blue-600 text-white m-1 px-4 py-2 rounded mt-5">
  <%= messages.info %>
</div>
<% } %>
<!-- Info box end -->
